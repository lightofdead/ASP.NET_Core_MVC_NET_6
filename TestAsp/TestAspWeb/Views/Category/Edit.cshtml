@model Category

<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class = "row bp-2">
		<h2 class ="text-primary"> Изменить категорию</h2>
		<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="Name">Имя</label>
			<input asp-for="Name" class = "form-control"/>
			<span asp-validation-for="Name" class="text-danger"></span>
		<div>
		<div class="mb-3">
			<label asp-for="DisplayOrder">Заказ</label>
			<input asp-for="DisplayOrder" class = "form-control"/>
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>
		</div>
		<button type ="submit" class="btn btn-primary" style="width:150px">Обновить</button>
		<a asp-controller="Category" asp-action="Index" class="btn btn-primary" style="width:150px">
			Обратно к списку
		</a>
	</div>
</form>
@section Scripts{
	@{
	<partical name ="_ValidationScriptsPartial" />
	}
}

